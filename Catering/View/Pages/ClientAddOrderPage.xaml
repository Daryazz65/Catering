<Page x:Class="Catering.View.Pages.ClientAddOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Catering.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientAddOrderPage">

    <Grid Background="#FFE5D1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="12" />
            <ColumnDefinition Width="1.2*" />
        </Grid.ColumnDefinitions>

        <!-- Left: categories + dishes -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Foreground="#EE9C6A" Text="Выберите категорию" FontWeight="Bold" Margin="0 0 0 6" />
            <ScrollViewer Grid.Row="1" MinHeight="50" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal" x:Name="CategoriesPanel" />
            </ScrollViewer>

            <TextBlock Grid.Row="2" Foreground="#EE9C6A" Text="Блюда" FontWeight="Bold" Margin="0 12 0 6" />
            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="DishesPanel" ItemHeight="160" ItemWidth="220" />
            </ScrollViewer>
        </Grid>

        <!-- Right: cart -->
        <Border Grid.Column="2" Background="#FFE5D1" CornerRadius="6" Padding="12" BorderBrush="White" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Foreground="#EE9C6A" Text="Корзина" FontWeight="Bold" FontSize="16" Margin="0 0 0 8" />

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="CartItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#eee" BorderThickness="1" Padding="8" Margin="0 0 0 8" CornerRadius="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Dish.Name}" FontWeight="Bold" Foreground="#EE9C6A" />
                                            <TextBlock Text="{Binding Dish.Description}" FontSize="12" Foreground="#EE9C6A" TextWrapping="Wrap" />
                                            <StackPanel Orientation="Horizontal" Margin="0 6 0 0">
                                                <Button Content="-" Width="24" Click="DecreaseQty_Click" Tag="{Binding}" />
                                                <TextBlock Foreground="#EE9C6A" Text="{Binding Quantity}" Width="30" TextAlignment="Center" VerticalAlignment="Center" />
                                                <Button Content="+" Width="24" Click="IncreaseQty_Click" Tag="{Binding}" />
                                                <TextBlock Foreground="#EE9C6A" Text="  Цена: " VerticalAlignment="Center" />
                                                <TextBlock Text="{Binding Price}" Foreground="#EE9C6A" FontWeight="Bold" VerticalAlignment="Center" />
                                            </StackPanel>
                                        </StackPanel>
                                        <Button Grid.Column="1" Content="Удалить" Click="RemoveFromCart_Click" Tag="{Binding}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 8 0 0">
                    <TextBlock Foreground="#EE9C6A" Text="Итого: " FontWeight="Bold" VerticalAlignment="Center" />
                    <TextBlock x:Name="TotalSumText" Foreground="#EE9C6A" Text="0" FontWeight="Bold" Margin="6 0 0 0" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Grid.Row="2" Margin="0 44 0 0">
                    <TextBlock Foreground="#EE9C6A" Text="Адрес доставки" Margin="0 8 0 0" />
                    <TextBox x:Name="AddressTextBox" Foreground="#EE9C6A"  />

                    <TextBlock Text="Комментарий" Foreground="#EE9C6A" Margin="0 8 0 0" />
                    <TextBox x:Name="CommentTextBox" Foreground="#EE9C6A" Height="60" AcceptsReturn="True" TextWrapping="Wrap" />

                    <Button Content="Оформить заказ" Foreground="White" Margin="0 12 0 0" Height="36" Click="PlaceOrder_Click" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
