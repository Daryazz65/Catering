<Page x:Class="Catering.View.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Catering.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid Background="#FFF9F3" Margin="12" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0 0 12 0">
            <TextBlock Foreground="#EE9C6A" Text="Профиль" FontWeight="Bold" FontSize="18" Margin="0 0 0 8" />
            <TextBlock Foreground="#EE9C6A" Text="ФИО" />
            <TextBox x:Name="FullNameText" Foreground="#EE9C6A"/>
            <TextBlock Text="Логин" Margin="0 8 0 0" Foreground="#EE9C6A"/>
            <TextBox x:Name="LoginText" Foreground="#EE9C6A"/>
            <TextBlock Text="Пароль" Margin="0 8 0 0" Foreground="#EE9C6A"/>
            <PasswordBox x:Name="PasswordBox" Foreground="#EE9C6A"/>
            <TextBlock Text="Телефон" Margin="0 8 0 0" Foreground="#EE9C6A"/>
            <TextBox x:Name="PhoneText" Foreground="#EE9C6A"/>
            <Button Content="Сохранить" Click="SaveBtn_Click" Width="120" Height="36" Margin="0 12 0 0" Foreground="White" />
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="Информация" FontWeight="Bold" Foreground="#EE9C6A" FontSize="16" Margin="0 0 0 8" />
            <TextBlock Text="Роль:" FontWeight="Bold" Foreground="#EE9C6A"/>
            <TextBlock x:Name="RoleText" Margin="0 0 0 8" Foreground="#EE9C6A"/>
            <TextBlock Text="Кол-во заказов:" FontWeight="Bold" Foreground="#EE9C6A"/>
            <TextBlock x:Name="OrdersCountText" Foreground="#EE9C6A"/>
        </StackPanel>
    </Grid>
</Page>
