<Window x:Class="Catering.View.Windows.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Catering.View.Windows"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="600" Width="1000" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Top" Background="#FFF9F3" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                <Button Name="BtnOrders" Content="Заказы" Width="150" Margin="0 0 8 0" Click="BtnOrders_Click" Foreground="White" />
                <Button Name="BtnCategoryDish" Content="Категории и блюда" Width="220" Margin="0 0 8 0" Click="BtnCategoryDish_Click" Foreground="White" />
                <Button Name="BtnUsers" Content="Клиенты" Width="150" Margin="0 0 8 0" Click="BtnUsers_Click" Foreground="White" />
                <Button Name="BtnLogout" Content="Выйти" Width="80" Margin="0 0 8 0" Click="BtnLogout_Click" Foreground="White" />
            </StackPanel>

            <Image Grid.Column="1" Source="/Resources/лого.png" Width="100" Height="45" Margin="8" VerticalAlignment="Center" HorizontalAlignment="Right" />
        </Grid>

        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
