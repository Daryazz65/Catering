<Window x:Class="Catering.View.Windows.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Catering.View.Windows"
        mc:Ignorable="d"
        Title="CustomMessageBox" Height="360" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    <Grid Background="#FFF9F3">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer Margin="10" VerticalScrollBarVisibility="Auto">
            <TextBlock Foreground="#EE9C6A" x:Name="MessageTextBlock" TextWrapping="Wrap" />
        </ScrollViewer>
        <Button x:Name="OkButton" Content="OK" Width="90" Height="32" Margin="10" 
                Grid.Row="1" HorizontalAlignment="Center" Click="OkButton_Click"/>
    </Grid>
</Window>
    