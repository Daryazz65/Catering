<Window x:Class="Catering.View.Windows.AuthorisationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Catering.View.Windows"
        mc:Ignorable="d"
        Title="Окно авторизации" Height="500" Width="800" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FFF9F3">
        <Grid.RowDefinitions>
            <RowDefinition Height=".6*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="25" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация" Foreground="#EE9C6A" FontSize="30" FontWeight="SemiBold" HorizontalAlignment="Center"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width=".3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="10" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <TextBlock Foreground="#EE9C6A" Text="Логин:" HorizontalAlignment="Right" />
            <TextBox Name="LoginTb" Grid.Column="2" TextAlignment="Left" />
            <TextBlock Foreground="#EE9C6A" Text="Пароль:" Grid.Row="2" HorizontalAlignment="Right" />
            <PasswordBox Name="PasswordTb" Grid.Column="2" Grid.Row="2" HorizontalContentAlignment="Left" />
        </Grid>
        <Button Grid.Row="3" Margin="270 -15 270 10" Height="30" Background="Transparent"
                BorderBrush="Transparent" Name="PasswordRecoveryBtn" Click="PasswordRecoveryBtn_Click">
            <TextBlock Foreground="#EE9C6A" Text="Забыли пароль?" FontSize="17"/>
        </Button>
        <Button Name="CaptchaBtn" Grid.Row="5" 
                VerticalAlignment="Top" Margin="270 -10 270 0" Height="30" Click="CaptchaBtn_Click"
                Background="Transparent" BorderBrush="Transparent">
            <TextBlock Foreground="#EE9C6A" Text="Я не робот" FontSize="25"/> 
        </Button>
        <Button Name="EnterBtn" Margin="120 -40 115 0" Click="EnterBtn_Click" Content="Войти" Grid.Row="5"/>
        <Button Name="RegistrationBtn" Margin="120 65 115 0" Click="RegistrationBtn_Click"  Content="Зарегистрироваться" Grid.Row="5"/>
        <Image Source="/Resources/лого.png" HorizontalAlignment="Left" Width="80" Height="50" Margin="5" VerticalAlignment="Top"/>
    </Grid>
</Window>